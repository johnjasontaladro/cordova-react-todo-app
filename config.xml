<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.todoapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Todo App by JT</name>
    <description>Todo App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Jason Taladro
    </author>
    <hook type="before_prepare" src="scripts/prebuild.js" />
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <!--<icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />-->
        <icon src="res/android/ldpi.png" width="36" height="36" density="ldpi" />
        <icon src="res/android/mdpi.png" width="48" height="48" density="mdpi" />
        <icon src="res/android/hdpi.png" width="72" height="72" density="hdpi" />
        <icon src="res/android/xhdpi.png" width="96" height="96" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" width="144" height="144" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" width="192" height="192" density="xxxhdpi" />
        <icon background="res/android/ldpi-background.png" density="ldpi" foreground="res/android/ldpi-foreground.png" />
        <icon background="res/android/mdpi-background.png" density="mdpi" foreground="res/android/mdpi-foreground.png" />
        <icon background="res/android/hdpi-background.png" density="hdpi" foreground="res/android/hdpi-foreground.png" />
        <icon background="res/android/xhdpi-background.png" density="xhdpi" foreground="res/android/xhdpi-foreground.png" />
        <icon background="res/android/xxhdpi-background.png" density="xxhdpi" foreground="res/android/xxhdpi-foreground.png" />
        <icon background="res/android/xxxhdpi-background.png" density="xxxhdpi" foreground="res/android/xxxhdpi-foreground.png" />
    </platform>
</widget>